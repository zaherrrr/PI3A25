{% extends 'dashboard.html.twig' %}


{% block title %}

    Ajouter

    Ajouter un formation


{% endblock %}

{% block body %}
    <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.2.2/jquery.form.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        $(document).ready(function () {

            $('#formation_Enregistrer').click(function () {

                var description =$('#formation_description').val();

                var image =$('#formation_imageFile').val();
                var niveau =$('#formation_niveau_frt').val();
                var categorie =$('#formation_categorieFormation').val();

                if ((description.length<5)||((description.length>15)))
                {
                    swal({
                        title: 'Error!',
                        text: 'description:il faut au moin 5 caractere et max 15',
                        icon: 'error',
                        button: {
                            text: "Continue",
                            value: true,
                            visible: true,
                            className: "btn btn-primary"
                        }
                    });
                    return false;

                }


                else if (image.length==0)
                {
                    swal({
                        title: 'Error!',
                        text: 'image:choisir image',
                        icon: 'error',
                        button: {
                            text: "Continue",
                            value: true,
                            visible: true,
                            className: "btn btn-primary"
                        }
                    });
                    return false;

                }
                else if ((niveau.length<5)||((niveau.length>10)))
                {
                    swal({
                        title: 'Error!',
                        text: 'niveau:il faut au moin 5 caractere et max 10',
                        icon: 'error',
                        button: {
                            text: "Continue",
                            value: true,
                            visible: true,
                            className: "btn btn-primary"
                        }
                    });
                    return false;

                }
                else if (categorie.length==0)
                {
                    swal({
                        title: 'Error!',
                        text: 'categorie:choisir categorie',
                        icon: 'error',
                        button: {
                            text: "Continue",
                            value: true,
                            visible: true,
                            className: "btn btn-primary"
                        }
                    });
                    return false;

                }

            });



        });

    </script>
{{ form_start(form) }}







