{% extends 'dashboard.html.twig' %}

{% block title %}Categorie Emploi{% endblock %}



{% block body %}


    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Dashboard</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Dashboard</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->



    <div  style="margin-left: 30px; width: 1350px " >

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Les Utilisateurs</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">


                <a class="btn btn-secondary " href="{{ path('offre_emploi_new')}}">ajouter</a>
                <table id="example2" class="table table-bordered table-hover">


                    <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Categorie</th>
                        <th>moddifer supprimer</th>


                    </tr>
                    </thead>
                    {%  for utils in offre_emplois %}
                        <tbody>
                        <tr>
                            <td>{{ utils.titreoffreemploi }}</td>
                            <td>{{ utils.descriptioncatem }}</td>
                            <td>{{ utils.categorieEmploi.nomEmploi }}  </td>
                            <td>
                                <a class="btn btn-secondary " href="{{ path('OffreEmploi_modification',{'id' : utils.id}) }}">modifier</a>
                                <a class="btn btn-danger " href="{{ path('OffreEmploi_supprimer',{'id' : utils.id}) }}">supprimer</a>
                            </td>





                        </tr>
                        </tbody>
                    {% endfor %}
                </table>
            </div>
            <!-- /.card-body -->


        </div>
        <!-- /.col -->

        <!-- /.container-fluid -->
    </div>
    <div class="container-fluid">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Liste Postulation</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">


                                <table id="example2" class="table table-bordered table-hover">


                                    <thead>
                                    <tr>

                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Date</th>
                                        <th>Motivation</th>
                                        <th>Ficher</th>
                                        <th>OffreFreelance</th>



                                    </tr>
                                    </thead>

                                    <tbody>
                                    {%  for utils in offre_emplois %}
                                        {%  for e in utils.postulerEmplois %}
                                            <tr>
                                                <td>{{ e.user.username}}</td>
                                                <td>{{ e.user.email}}</td>
                                                <td>{{ e.datePostulation|date('H:i')}} {{ e.datePostulation| date('d-m-Y') }}</td>
                                                <td>{{ e.motivation}}</td>
                                                <td><a href="{{ asset('uploads/pdf/' ~ e.pdfcv) }}" download="{{ e.user.username }}">Download</a></td>
                                                <td>{{ e.offreEmploi.titreoffreemploi}}</td>


                                            </tr>
                                        {% endfor %}
                                    {% endfor %}
                                    </tbody>

                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>

                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
    </div>



    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
{% endblock %}